! General
URxvt.internalBorder:    0
URxvt.lineSpace:         3

! Font
URxvt.allow_bold:        true
URxvt*font:              xft:DejaVuSansMono Nerd Font:style=Book:pixelsize=14,\
						 xft:Source Han Sans JP:pixelsize=14
URxvt*boldFont:          xft:DejaVuSansMono Nerd Font:style=Bold:pixelsize=14,\
						 xft:Source Han Sans JP:style=Bold:pixelsize=14

! Scrollbar
URxvt.scrollStyle:       rxvt
URxvt.scrollBar:         false

! Cursor
URxvt.cursorBlink:       true
URxvt.cursorColor:       #657b83
URxvt.cursorUnderline:   false

! Pointer
URxvt.pointerBlank:      true
